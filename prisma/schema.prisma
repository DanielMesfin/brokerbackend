generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  SELLS_AGENT
  ADMIN
  MODERATOR
  PREMIUM
  BUSINESS_OWNER
  INFLUENCER
}

enum AuthProvider {
  EMAIL
  GOOGLE
  FACEBOOK
}

enum PromotionCategory {
  FOOD
  FASHION
  ELECTRONICS
  BEAUTY
  HOME
  SPORTS
  TRAVEL
  OTHER
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  PREMIUM_SUBSCRIPTION
  PROMOTION_BOOST
}

enum CollaborationType {
  CO_MARKETING
  TECH_PARTNERSHIP
  RESOURCE_SHARING
  EVENT_COLLABORATION
  CROSS_PROMOTION
  OTHER
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum KYCStatus {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
  DELETED
}

enum KYCBusinessType {
  INDIVIDUAL
  SMALL_BUSINESS
  ENTERPRISE
  GOVERNMENT
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model KnowledgeDoc {
  id        String   @id @default(uuid())
  title     String
  source    String?
  text      String
  embedding String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model BusinessProfile {
  id                 String           @id @default(uuid())
  businessName       String           @db.VarChar(100)
  description        String?          @db.Text
  industry           String           @db.VarChar(100)
  location           String?          @db.VarChar(100)
  website            String?          @db.VarChar(255)
  logoUrl            String?          @db.Text
  collaborationTypes String?          @db.Text // Store as JSON string
  goals              String?          @db.Text
  userId             String           @unique
  user               User             @relation(fields: [userId], references: [id])
  promotions         Promotion[]
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  @@index([userId])
}

model Promotion {
  id            String           @id @default(uuid())
  title         String           @db.VarChar(100)
  description   String?          @db.Text
  imageUrl      String?          @db.Text
  startDate     DateTime
  endDate       DateTime
  isActive      Boolean          @default(true)
  maxClaims     Int
  currentClaims Int              @default(0)
  pointsCost    Int
  category      PromotionCategory
  businessId    String
  business      BusinessProfile  @relation(fields: [businessId], references: [id])
  claims        PromotionClaim[]
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([businessId])
  @@index([isActive])
}

model PromotionClaim {
  id          String    @id @default(uuid())
  userId      String
  promotionId String
  sharedCount Int       @default(0)
  points      Int       @default(0)
  claimedAt   DateTime  @default(now())
  user        User      @relation(fields: [userId], references: [id])
  promotion   Promotion @relation(fields: [promotionId], references: [id])

  @@unique([userId, promotionId])
}

model Regulation {
  id          String   @id @default(uuid())
  title       String   @db.VarChar(255)
  description String?  @db.Text
  content     String   @db.Text
  category    String   @db.VarChar(100)
  country     String   @db.VarChar(100)
  region      String?  @db.VarChar(100)
  isActive    Boolean  @default(true)
  version     String   @default("1.0.0") @db.VarChar(20)
  publishedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdAt   DateTime @default(now())
  updatedBy   String?  @db.VarChar(100)

  @@index([category])
  @@index([country])
  @@index([isActive])
}

model User {
  id                       String               @id @default(uuid())
  email                    String               @unique
  emailVerified            DateTime?
  firstName                String
  secondName               String?
  lastName                 String
  name                     String?              @db.VarChar(100)
  username                 String?              @unique @db.VarChar(30)
  passwordHash             String?
  phone                    String?
  bio                      String?              @db.VarChar(500)
  avatarUrl                String?              @db.Text
  isActive                 Boolean              @default(true)
  isVerified               Boolean              @default(false)
  isEmailVerified          Boolean              @default(false)
  emailVerificationToken   String?              @db.VarChar(255)
  emailVerificationExpires DateTime?
  passwordResetToken       String?              @db.VarChar(255)
  passwordResetExpires     DateTime?
  role                     UserRole             @default(USER)
  authProvider             AuthProvider         @default(EMAIL)
  premiumUntil             DateTime?
  points                   Int                  @default(0)
  referralCode             String
  lastLogin                DateTime?
  refreshToken             String?
  createdAt                DateTime             @default(now())
  updatedAt                DateTime             @updatedAt
  
  // Relations
  accounts                 Account[]
  sessions                 Session[]
  campaignsCreated         Campaign[]           @relation("CampaignsCreated")
  campaignMemberships       CampaignCollaborator[] @relation("CampaignMemberships")
  businesses               BusinessMember[]
  comments                 Comment[]
  receivedConnections       Connection[]         @relation("ReceivedConnections")
  sentConnections          Connection[]         @relation("SentConnections")
  buyerConversations        Conversation[]       @relation("BuyerConversations")
  sellerConversations       Conversation[]       @relation("SellerConversations")
  buyerDraftOrders         DraftOrder[]         @relation("BuyerDraftOrders")
  sellerDraftOrders        DraftOrder[]         @relation("SellerDraftOrders")
  likes                    Like[]
  listings                 Listing[]
  posts                    Post[]
  profile                  UserProfile?
  verificationCodes        VerificationCode[]
  verifiedVerifications    VerificationCode[]   @relation("VerifiedVerifications")
  uploadedDocuments        BusinessDocument[]
  acceptedCompliances      BusinessCompliance[] @relation("AcceptedCompliances")
  businessProfile          BusinessProfile?
  promotionClaims          PromotionClaim[]
}

model UserProfile {
  id            String      @id @default(uuid())
  userId        String      @unique
  bio           String?
  avatar        String?
  website       String?
  location      String?
  dateOfBirth   DateTime?
  isVerified    Boolean     @default(false)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  socialLinksId String?     @unique
  socialLinks   SocialLink? @relation(fields: [socialLinksId], references: [id])
  user          User        @relation(fields: [userId], references: [id])
}

enum VerificationStatus {
  PENDING
  APPROVED
  REJECTED
}

model VerificationCode {
  id         String             @id @default(uuid())
  userId     String
  businessId String?
  code       String
  type       String
  isUsed     Boolean            @default(false)
  status     VerificationStatus @default(PENDING)
  expiresAt  DateTime
  verifiedAt DateTime?
  notes      String?
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt
  user       User               @relation(fields: [userId], references: [id])
  business   Business?          @relation(fields: [businessId], references: [id])
  verifiedBy User?              @relation("VerifiedVerifications", fields: [verifiedById], references: [id])
  verifiedById String?

  @@unique([userId, type], name: "userId_type")
}

model SocialLink {
  id             String       @id @default(uuid())
  facebookUrl    String?
  instagramUrl   String?
  tiktokUrl      String?
  youtubeUrl     String?
  linkedinUrl    String?
  twitterUrl     String?
  telegramUrl    String?
  whatsappNumber String?
  websiteUrl     String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  userProfile    UserProfile?
}

model Post {
  id          String    @id @default(uuid())
  content     String
  media       String    @default("[]")
  authorId    String
  isPublished Boolean   @default(true)
  isDeleted   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  comments    Comment[]
  likes       Like[]
  author      User      @relation(fields: [authorId], references: [id])

  @@index([authorId])
}

model Business {
  id            String               @id @default(uuid())
  name          String
  description   String?
  logo          String?
  website       String?
  industry      String?
  size          String?
  isVerified    Boolean              @default(false)
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  members       BusinessMember[]
  listings      Listing[]
  documents     BusinessDocument[]
  verifications VerificationCode[]
  compliances   BusinessCompliance[] @relation("BusinessCompliances")
  campaigns     Campaign[]           @relation("BusinessCampaigns")

  @@index([name])
  @@index([industry])
}

model BusinessDocument {
  id           String   @id @default(uuid())
  name         String
  url          String
  type         String?
  business     Business @relation(fields: [businessId], references: [id])
  businessId   String
  uploadedBy   User     @relation(fields: [uploadedById], references: [id])
  uploadedById String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([businessId])
  @@index([type])
}

model BusinessCompliance {
  id             String   @id @default(uuid())
  businessId     String
  business       Business @relation("BusinessCompliances", fields: [businessId], references: [id])
  acceptedById   String?
  acceptedBy     User?    @relation("AcceptedCompliances", fields: [acceptedById], references: [id])
  acceptedAt     DateTime @default(now())
  complianceType String // e.g., 'TERMS_OF_SERVICE', 'PRIVACY_POLICY', etc.
  version        String? // Version of the compliance document
  ipAddress      String? // IP address of the user who accepted
  userAgent      String? // User agent of the user who accepted
  listingId      String?
  listing        Listing? @relation("ListingCompliances", fields: [listingId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([businessId])
  @@index([acceptedById])
  @@index([complianceType])
  @@index([listingId])
}

model BusinessMember {
  id         String   @id @default(uuid())
  userId     String
  businessId String
  role       String   @default("MEMBER")
  joinedAt   DateTime @default(now())
  business   Business @relation(fields: [businessId], references: [id])
  user       User     @relation(fields: [userId], references: [id])

  @@unique([userId, businessId])
  @@index([businessId])
}

model Connection {
  id          String    @id @default(uuid())
  senderId    String
  receiverId  String
  status      String    @default("PENDING")
  message     String?
  connectedAt DateTime?
  receiver    User      @relation("ReceivedConnections", fields: [receiverId], references: [id])
  sender      User      @relation("SentConnections", fields: [senderId], references: [id])

  @@unique([senderId, receiverId])
  @@index([receiverId])
  @@index([status])
}

model Listing {
  id                 String               @id @default(uuid())
  title              String
  description        String
  type               String
  price              Float
  category           String
  tags               String
  commissionRate     Float?
  isForCollaboration Boolean              @default(false)
  campaignProducts   CampaignProduct[]
  isNegotiable   Boolean              @default(false)
  imageUrls      String?
  userId         String?
  businessId     String?
  isActive       Boolean              @default(true)
  views          Int                  @default(0)
  status         String               @default("PENDING")
  quantity       Int                  @default(1)
  minOrder       Int                  @default(1)
  maxOrder       Int?
  leadTime       String?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
  conversations  Conversation[]
  DraftOrder     DraftOrder[]
  business       Business?            @relation(fields: [businessId], references: [id])
  compliances    BusinessCompliance[] @relation("ListingCompliances")
  user           User?                @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([businessId])
  @@index([status])
  @@index([type])
  @@index([category])
}

model Comment {
  id        String   @id @default(uuid())
  content   String
  postId    String
  authorId  String
  parentId  String?
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])

  @@index([postId])
  @@index([authorId])
}

model Like {
  id        String   @id @default(uuid())
  postId    String
  userId    String
  createdAt DateTime @default(now())
  post      Post     @relation(fields: [postId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
}

model Follow {
  id          String   @id @default(uuid())
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

model Customer {
  id              String   @id @default(uuid())
  companyName     String
  contactPerson   String
  email           String   @unique
  phone           String?
  billingAddress  String?
  shippingAddress String?
  taxId           String?
  paymentTerms    Int?     @default(30)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([email])
  @@index([companyName])
}

model Conversation {
  id           String       @id @default(uuid())
  listingId    String?
  buyerUserId  String?
  sellerUserId String?
  status       String       @default("DRAFT")
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  agentRuns    AgentRun[]
  buyer        User?        @relation("BuyerConversations", fields: [buyerUserId], references: [id])
  listing      Listing?     @relation(fields: [listingId], references: [id])
  seller       User?        @relation("SellerConversations", fields: [sellerUserId], references: [id])
  draftOrders  DraftOrder[]
  messages     Message[]

  @@index([listingId])
  @@index([buyerUserId])
  @@index([sellerUserId])
}

/// A single message in a conversation, from USER, AGENT, or ADMIN
model Message {
  id             String       @id @default(uuid())
  conversationId String
  senderType     String
  text           String
  metadata       String?
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  @@index([conversationId])
}

/// Records an AI agent run/decision for traceability
model AgentRun {
  id             String       @id @default(uuid())
  conversationId String
  input          String
  output         String
  decision       String
  createdAt      DateTime     @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])

  @@index([conversationId])
}

/// A draft order created by the agent pending confirmation
model Campaign {
  id              String                 @id @default(uuid())
  name            String
  description     String?
  startDate       DateTime
  endDate         DateTime
  status          String                 @default("DRAFT") // DRAFT, ACTIVE, COMPLETED, CANCELLED
  budget          Float?
  targetAudience  String?
  createdById     String
  businessId      String?
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
  
  // Relations
  createdBy       User                   @relation("CampaignsCreated", fields: [createdById], references: [id])
  business        Business?              @relation("BusinessCampaigns", fields: [businessId], references: [id])
  products        CampaignProduct[]
  collaborators   CampaignCollaborator[]
  
  @@index([createdById])
  @@index([businessId])
  @@index([status])
}

model CampaignProduct {
  id             String   @id @default(uuid())
  campaignId     String
  productId      String
  commissionRate Float?
  status         String   @default("PENDING") // PENDING, APPROVED, REJECTED
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  campaign       Campaign @relation(fields: [campaignId], references: [id])
  product        Listing  @relation(fields: [productId], references: [id])
  
  @@unique([campaignId, productId])
}

model CampaignCollaborator {
  id         String   @id @default(uuid())
  campaignId String
  userId     String
  role       String   // OWNER, MANAGER, CONTRIBUTOR
  status     String   @default("PENDING") // PENDING, ACCEPTED, REJECTED
  joinedAt   DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  campaign   Campaign @relation(fields: [campaignId], references: [id])
  user       User     @relation("CampaignMemberships", fields: [userId], references: [id])
  
  @@unique([campaignId, userId])
}

model DraftOrder {
  id             String       @id @default(uuid())
  conversationId String
  listingId      String
  buyerUserId    String
  sellerUserId   String
  quantity       Int          @default(1)
  priceAgreed    Float?
  status         String       @default("DRAFT")
  shippingInfo   String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  buyer          User         @relation("BuyerDraftOrders", fields: [buyerUserId], references: [id])
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  listing        Listing      @relation(fields: [listingId], references: [id])
  seller         User         @relation("SellerDraftOrders", fields: [sellerUserId], references: [id])

  @@index([conversationId])
  @@index([listingId])
  @@index([buyerUserId])
  @@index([sellerUserId])
}
